root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4
tab_width = 4

# Generated code
[*.g.cs]
generated_code = true

# JSON/JavaScript/TypeScript files
[*.{json,js,jsx,ts,tsx}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
